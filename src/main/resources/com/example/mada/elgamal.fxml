<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mada.elgamal.ElgamalController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="1. Generate Elgamal Key Pair" onAction="#generateElgamal"/>
    <Button text="2. Encrypt file" onAction="#encryptFile"/>
    <Button text="3. Decrypt file" onAction="#decryptFile"/>
</VBox>
